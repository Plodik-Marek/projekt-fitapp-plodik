@model fitapp_plodik_MVC.Entities.Machine
@{
    ViewData["Title"] = "Přidat stroj";
}

<style>
    .fit-box {
        background: rgba(18,18,18,.92);
        border: 1px solid rgba(255,255,255,.1);
        border-radius: 22px;
        padding: 24px;
        box-shadow: 0 0 35px rgba(34,211,238,.08)
    }

    .fit-label {
        font-weight: 700;
        color: rgba(255,255,255,.85);
        margin-bottom: 6px;
        font-family: 'Montserrat'
    }

    .fit-input {
        background: rgba(0,0,0,.45) !important;
        border: 1px solid rgba(255,255,255,.12) !important;
        color: #fff !important;
        border-radius: 14px !important;
        padding: 10px 12px !important
    }

    .fit-btn-save {
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.35);
        color: rgba(16,185,129,.95);
        font-weight: 800;
        border-radius: 14px;
        padding: 10px 18px
    }

    .fit-preview {
        display: none;
        margin-top: 12px;
        max-width: 260px;
        border-radius: 16px
    }
</style>

<div class="fit-box">
    <h2>Přidat stroj</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="fit-label">Název</label>
            <input asp-for="Name" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Značka</label>
            <input asp-for="Brand" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Partie</label>
            <input asp-for="MuscleGroup" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Popis</label>
            <textarea asp-for="Description" class="form-control fit-input"></textarea>
        </div>

        <div class="mb-4">
            <label class="fit-label">Obrázek stroje</label>
            <input type="file" name="imageFile" id="imageFile" class="form-control fit-input" accept="image/*" />
            <img id="preview" class="fit-preview" />
        </div>

        <button type="submit" class="fit-btn-save">Uložit</button>
        <a asp-action="Index" class="btn btn-secondary">Zpět</a>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("imageFile").addEventListener("change",e=>{
            const p=document.getElementById("preview");
            if(e.target.files[0]){p.src=URL.createObjectURL(e.target.files[0]);p.style.display="block";}
        });
    </script>
}
