@model IEnumerable<fitapp_plodik_MVC.Entities.Machine>

@{
    ViewData["Title"] = "Stroje";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">🏋️ Stroje</h2>

    <a asp-action="Create" class="btn btn-success">
        + Přidat stroj
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Název</th>
                    <th>Značka</th>
                    <th>Partie</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Name</td>
                        <td>@(item.Brand ?? "-")</td>
                        <td>
                            <span class="badge bg-primary">@item.MuscleGroup</span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Upravit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
