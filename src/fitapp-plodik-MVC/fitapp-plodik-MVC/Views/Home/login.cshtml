@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .login-card {
        width: 100%;
        max-width: 420px;
        padding: 38px;
        background: rgba(15, 15, 15, 0.85);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 26px;
        backdrop-filter: blur(14px);
        box-shadow: 0 0 60px rgba(0,0,0,0.65);
    }

    .login-title {
        font-size: 2.4rem;
        font-weight: 800;
        text-align: center;
        letter-spacing: 2px;
        color: #fff;
        margin-bottom: 6px;
    }

    .login-subtitle {
        text-align: center;
        color: rgba(255,255,255,0.6);
        font-weight: 300;
        margin-bottom: 26px;
    }

    .fit-label {
        color: rgba(255,255,255,0.85);
        font-weight: 600;
        margin-bottom: 6px;
    }

    .fit-input {
        background: rgba(0,0,0,0.55) !important;
        border: 1px solid rgba(255,255,255,0.15) !important;
        border-radius: 14px !important;
        color: #fff !important;
        padding: 12px !important;
        margin-bottom: 16px;
    }

        .fit-input:focus {
            border-color: rgba(34,211,238,0.5) !important;
            box-shadow: 0 0 0 0.15rem rgba(34,211,238,0.15) !important;
        }

    .btn-login {
        width: 100%;
        margin-top: 8px;
        padding: 13px;
        border-radius: 14px;
        font-weight: 700;
        letter-spacing: 1px;
        background: linear-gradient(90deg, #22d3ee, #10b981);
        border: none;
        color: #000;
        transition: 0.2s ease;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(34,211,238,0.35);
        }

    .login-links {
        text-align: center;
        margin-top: 18px;
        font-size: 0.95rem;
    }

        .login-links a {
            color: #22d3ee;
            text-decoration: none;
            font-weight: 600;
        }

            .login-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-card">

    <div class="login-title">FITAPP</div>
    <div class="login-subtitle">Přihlas se do svého fitness účtu</div>

    <form>
        <label class="fit-label">Email</label>
        <input type="email" class="form-control fit-input" placeholder="zadej e-mail" />

        <label class="fit-label">Heslo</label>
        <input type="password" class="form-control fit-input" placeholder="••••••••" />

        <button type="submit" class="btn btn-login">PŘIHLÁSIT SE</button>
    </form>

    <div class="login-links">
        Nemáš účet? <a href="#">Registrace</a>
    </div>

</div>
