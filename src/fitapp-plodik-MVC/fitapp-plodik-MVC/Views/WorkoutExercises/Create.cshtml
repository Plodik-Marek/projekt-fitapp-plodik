@model fitapp_plodik_MVC.Entities.WorkoutExercise

<h2>Přidat cvik do tréninku</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="WorkoutId" value="@ViewBag.WorkoutId" />

    <div class="mb-3">
        <label class="form-label">Cvik</label>
        <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId"></select>
        <span asp-validation-for="ExerciseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Série</label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Opakování</label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Váha</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Poznámka</label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Přidat</button>
    <a asp-controller="Workouts" asp-action="Details" asp-route-id="@ViewBag.WorkoutId" class="btn btn-secondary">Zpět</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
