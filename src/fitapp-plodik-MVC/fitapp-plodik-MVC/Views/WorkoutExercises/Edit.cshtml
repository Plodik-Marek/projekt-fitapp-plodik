@model fitapp_plodik_MVC.Entities.WorkoutExercise

@{
    ViewData["Title"] = "Upravit cvik v tréninku";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 2px;
        font-size: 2.3rem;
        margin-bottom: 0;
    }

    .fit-subtitle {
        color: rgba(255,255,255,0.65);
        font-family: 'Montserrat', sans-serif;
        margin-bottom: 18px;
    }

    .fit-box {
        background: rgba(18, 18, 18, 0.92);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 22px;
        padding: 24px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 35px rgba(34, 211, 238, 0.08);
    }

    .fit-label {
        font-weight: 700;
        letter-spacing: 0.5px;
        color: rgba(255,255,255,0.85);
        margin-bottom: 6px;
        font-family: 'Montserrat', sans-serif;
    }

    .fit-input {
        background: rgba(0,0,0,0.45) !important;
        border: 1px solid rgba(255,255,255,0.12) !important;
        color: #fff !important;
        border-radius: 14px !important;
        padding: 10px 12px !important;
    }

        .fit-input:focus {
            border-color: rgba(34, 211, 238, 0.45) !important;
            box-shadow: 0 0 0 0.15rem rgba(34, 211, 238, 0.15) !important;
        }

        .fit-input[disabled] {
            opacity: 0.85;
            border: 1px solid rgba(255,255,255,0.10) !important;
        }

    .fit-validation {
        color: rgba(239,68,68,0.95);
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
    }

    .fit-btn-save {
        background: rgba(255, 193, 7, 0.14);
        border: 1px solid rgba(255, 193, 7, 0.35);
        color: rgba(255, 193, 7, 0.95);
        font-weight: 800;
        letter-spacing: 0.6px;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(255, 193, 7, 0.18);
            color: rgba(255,193,7,1);
        }

    .fit-btn-back {
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.12);
        color: rgba(255,255,255,0.85);
        font-weight: 700;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(255,255,255,0.06);
            color: #fff;
        }
</style>

<div class="fit-box">

    <div class="mb-3">
        <div class="fit-page-title">Upravit cvik v tréninku</div>
        <div class="fit-subtitle">Uprav série, opakování, váhu a poznámku</div>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="fit-validation mb-3"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="WorkoutId" />
        <input type="hidden" asp-for="ExerciseId" />

        <div class="mb-3">
            <label class="fit-label">Cvik</label>
            <input class="form-control fit-input" value="@Model.Exercise?.Name" disabled />
        </div>

        <div class="mb-3">
            <label class="fit-label">Série</label>
            <input asp-for="Sets" class="form-control fit-input" />
            <span asp-validation-for="Sets" class="fit-validation"></span>
        </div>

        <div class="mb-3">
            <label class="fit-label">Opakování</label>
            <input asp-for="Reps" class="form-control fit-input" />
            <span asp-validation-for="Reps" class="fit-validation"></span>
        </div>

        <div class="mb-3">
            <label class="fit-label">Váha</label>
            <input asp-for="Weight" class="form-control fit-input" />
            <span asp-validation-for="Weight" class="fit-validation"></span>
        </div>

        <div class="mb-4">
            <label class="fit-label">Poznámka</label>
            <input asp-for="Note" class="form-control fit-input" />
            <span asp-validation-for="Note" class="fit-validation"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="fit-btn-save">Uložit</button>
            <a asp-controller="Workouts" asp-action="Details" asp-route-id="@Model.WorkoutId" class="fit-btn-back">
                Zpět
            </a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
