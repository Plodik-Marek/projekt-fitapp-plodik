@model fitapp_plodik_MVC.Entities.WorkoutExercise

<h2>Upravit cvik v tréninku</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="WorkoutId" />
    <input type="hidden" asp-for="ExerciseId" />

    <div class="mb-3">
        <label class="form-label">Cvik</label>
        <input class="form-control" value="@Model.Exercise?.Name" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Série</label>
        <input asp-for="Sets" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Opakování</label>
        <input asp-for="Reps" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Váha</label>
        <input asp-for="Weight" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Poznámka</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Uložit</button>
    <a asp-controller="Workouts" asp-action="Details" asp-route-id="@Model.WorkoutId" class="btn btn-secondary">Zpět</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
