@model fitapp_plodik_MVC.Entities.TrainerSpecialization

@{
    ViewData["Title"] = "Smazat specializaci";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 2px;
        font-size: 2.3rem;
        margin-bottom: 0;
    }

    .fit-subtitle {
        color: rgba(255,255,255,0.65);
        font-family: 'Montserrat', sans-serif;
        margin-bottom: 18px;
    }

    .fit-box {
        background: rgba(18, 18, 18, 0.92);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 22px;
        padding: 24px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 35px rgba(34, 211, 238, 0.08);
    }

    .fit-danger-note {
        background: rgba(239, 68, 68, 0.10);
        border: 1px solid rgba(239, 68, 68, 0.25);
        border-radius: 18px;
        padding: 14px 16px;
        margin-top: 14px;
        color: rgba(255,255,255,0.88);
        font-family: 'Montserrat', sans-serif;
    }

        .fit-danger-note b {
            color: rgba(255,255,255,1);
        }

    .fit-btn-delete {
        background: rgba(239, 68, 68, 0.12);
        border: 1px solid rgba(239, 68, 68, 0.40);
        color: rgba(239, 68, 68, 0.95);
        font-weight: 800;
        letter-spacing: 0.6px;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(239, 68, 68, 0.15);
            color: rgba(239,68,68,1);
        }

    .fit-btn-back {
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.12);
        color: rgba(255,255,255,0.85);
        font-weight: 700;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(255,255,255,0.06);
            color: #fff;
        }
</style>

<div class="fit-box">

    <div class="mb-2">
        <h2 class="fit-page-title">Smazat specializaci</h2>
        <div class="fit-subtitle">Tato akce je nevratná</div>
    </div>

    <div class="fit-danger-note">
        Opravdu chceš smazat specializaci: <b>@Model.Exercise?.Name</b>?
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="fit-btn-delete">Smazat</button>
            <a asp-controller="Trainers" asp-action="Details" asp-route-id="@Model.TrainerId" class="fit-btn-back">
                Zpět
            </a>
        </div>
    </form>

</div>
