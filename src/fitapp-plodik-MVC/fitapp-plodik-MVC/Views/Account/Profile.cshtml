@model fitapp_plodik_MVC.Entities.User

@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    body {
        background: url('/img/pozadi_uprava_profilu.png') no-repeat center center fixed;
        background-size: cover;
    }

    .profile-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-card {
        width: 100%;
        max-width: 700px;
        padding: 50px;
        background: rgba(10, 10, 10, 0.88);
        border-radius: 28px;
        backdrop-filter: blur(16px);
        box-shadow: 0 0 80px rgba(0,0,0,0.8);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .profile-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        border: 3px solid rgba(34,211,238,0.6);
        box-shadow: 0 0 25px rgba(34,211,238,0.4);
        object-fit: cover;
        margin-bottom: 15px;
    }

    .profile-email {
        font-weight: 700;
        font-size: 1.1rem;
        color: #22d3ee;
    }

    .section-title {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 20px;
        letter-spacing: 1px;
        color: #22d3ee;
        text-align: center;
    }

    .section-title-2 {
        font-size: 0.9rem;
        font-weight: 800;
        margin-bottom: 20px;
        letter-spacing: 1px;
        color: #22d3ee;
        text-align: center;
    }



    .fit-input {
        background: rgba(0,0,0,0.6) !important;
        border: 1px solid rgba(255,255,255,0.15) !important;
        border-radius: 14px !important;
        color: #fff !important;
        padding: 12px !important;
        margin-bottom: 20px;
    }

        .fit-input:focus {
            border-color: rgba(34,211,238,0.6) !important;
            box-shadow: 0 0 0 0.15rem rgba(34,211,238,0.15) !important;
        }

    .btn-save {
        padding: 13px 30px;
        border-radius: 14px;
        font-weight: 700;
        background: linear-gradient(90deg, #22d3ee, #10b981);
        border: none;
        color: #000;
        transition: 0.2s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(34,211,238,0.35);
        }

    .btn-back {
        margin-left: 15px;
        padding: 13px 30px;
        border-radius: 14px;
        font-weight: 700;
        border: 1px solid rgba(255,255,255,0.2);
        color: #fff;
        background: transparent;
        text-decoration: none;
        transition: 0.2s ease;
    }

        .btn-back:hover {
            color: #22d3ee;
            background: rgba(255,255,255,0.05);
        }

    .success-msg {
        color: #10b981;
        text-align: center;
        margin-bottom: 20px;
        font-weight: 600;
    }
</style>

<div class="profile-wrapper">
    <div class="profile-card">

        <div class="profile-header">
            <img src="/img/icons/profil.png" class="profile-avatar" />
            <div class="profile-email">@Model.Email</div>
        </div>

        @if (ViewBag.Success != null)
        {
            <div class="success-msg">@ViewBag.Success</div>
        }

        <div class="section-title">ÚDAJE O ÚČTU</div>

        <form asp-action="Profile" method="post">

            <label class="section-title-2">Jméno</label>
            <input asp-for="FirstName" class="form-control fit-input" />

            <label class="section-title-2">Příjmení</label>
            <input asp-for="LastName" class="form-control fit-input" />

            <label class="section-title-2">Věk</label>
            <input asp-for="Age" type="number" class="form-control fit-input" />

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn-save">ULOŽIT ZMĚNY</button>
                <a asp-controller="Home" asp-action="Index" class="btn-back">ZPĚT</a>
            </div>

        </form>

    </div>
</div>
