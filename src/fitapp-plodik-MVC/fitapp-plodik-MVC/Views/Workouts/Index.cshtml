@model List<fitapp_plodik_MVC.Entities.Workout>

@{
    ViewData["Title"] = "Tréninky";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 2px;
        font-size: 2.2rem;
        margin-bottom: 8px;
    }

    .fit-box {
        background: rgba(18, 18, 18, 0.92);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 22px;
        padding: 20px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 35px rgba(34, 211, 238, 0.08);
    }

    .fit-btn {
        background: rgba(34, 211, 238, 0.12);
        border: 1px solid rgba(34, 211, 238, 0.35);
        color: rgba(34, 211, 238, 0.95);
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 14px;
        padding: 10px 16px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

        .fit-btn:hover {
            background: rgba(34, 211, 238, 0.20);
            box-shadow: 0 0 25px rgba(34, 211, 238, 0.15);
            transform: translateY(-2px);
            color: rgba(34, 211, 238, 1);
        }

    .fit-table {
        width: 100%;
        margin-top: 12px;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .fit-table th {
            color:white;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.85rem;
            padding: 10px 12px;
        }

    .fit-row {
        background: rgba(0,0,0,0.35);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 16px;
        overflow: hidden;
        transition: 0.2s ease;
    }

        .fit-row:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 22px rgba(34, 211, 238, 0.10);
            border: 1px solid rgba(34, 211, 238, 0.18);
        }

        .fit-row td {
            padding: 14px 12px;
            color: rgba(255,255,255,0.85);
            vertical-align: middle;
        }

    .fit-links a {
        color: rgba(34, 211, 238, 0.95);
        font-weight: 700;
        text-decoration: none;
    }

        .fit-links a:hover {
            text-decoration: underline;
        }

    .fit-date {
        font-weight: 900;
        letter-spacing: 0.5px;
    }

    .fit-empty {
        color: rgba(255,255,255,0.65);
        text-align: center;
        padding: 25px 0;
    }
</style>

<div class="fit-box">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <div class="fit-page-title">Tréninky</div>
            <div style="color: rgba(255,255,255,0.65);">
                Přehled všech tréninků v aplikaci
            </div>
        </div>

        <a class="fit-btn" asp-action="Create">+ Přidat trénink</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="fit-empty">
            Zatím nejsou žádné tréninky.
        </div>
    }
    else
    {
        <table class="fit-table">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Poznámka</th>
                    <th style="text-align:right;">Akce</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var w in Model)
                {
                    <tr class="fit-row">
                        <td class="fit-date">@w.WorkoutDate.ToString("dd.MM.yyyy")</td>
                        <td>@(w.Note ?? "-")</td>
                        <td class="fit-links" style="text-align:right;">
                            <a asp-action="Details" asp-route-id="@w.Id">Detail</a>
                            <span style="color: rgba(255,255,255,0.35);"> | </span>
                            <a asp-action="Edit" asp-route-id="@w.Id">Upravit</a>
                            <span style="color: rgba(255,255,255,0.35);"> | </span>
                            <a asp-action="Delete" asp-route-id="@w.Id">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
