@model fitapp_plodik_MVC.Entities.Workout

@{
    ViewData["Title"] = "Detail tréninku";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">← Zpět</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white">
        <h4 class="m-0">Detail tréninku</h4>
    </div>

    <div class="card-body">
        <p class="mb-1">
            <strong>Datum:</strong> @Model.WorkoutDate.ToString("dd.MM.yyyy")
        </p>

        <p class="mb-0">
            <strong>Poznámka:</strong> @(Model.Note ?? "-")
        </p>
    </div>

    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Upravit trénink</a>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
    <h4 class="m-0">Cviky v tréninku</h4>

    <a class="btn btn-success"
       asp-controller="WorkoutExercises"
       asp-action="Create"
       asp-route-workoutId="@Model.Id">
        + Přidat cvik
    </a>
</div>

@if (Model.WorkoutExercises == null || Model.WorkoutExercises.Count == 0)
{
    <div class="alert alert-info">
        Zatím nejsou přidané žádné cviky.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Cvik</th>
                        <th class="text-center">Série</th>
                        <th class="text-center">Opakování</th>
                        <th class="text-center">Váha</th>
                        <th>Poznámka</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WorkoutExercises)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Exercise?.Name
                            </td>

                            <td class="text-center">@item.Sets</td>
                            <td class="text-center">@item.Reps</td>

                            <td class="text-center">
                                @(item.Weight.HasValue? item.Weight.Value.ToString("0.##") : "-")
                            </td>

                            <td>
                                @(string.IsNullOrWhiteSpace(item.Note) ? "-" : item.Note)
                            </td>

                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-warning"
                                   asp-controller="WorkoutExercises"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">
                                    Upravit
                                </a>

                                <a class="btn btn-sm btn-outline-danger"
                                   asp-controller="WorkoutExercises"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id">
                                    Smazat
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
