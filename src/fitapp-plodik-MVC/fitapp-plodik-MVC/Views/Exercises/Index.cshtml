@model List<fitapp_plodik_MVC.Entities.Exercise>

@{
    ViewData["Title"] = "Cviky";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 2px;
        font-size: 2.2rem;
        margin-bottom: 8px;
    }

    .fit-box {
        background: rgba(18, 18, 18, 0.92);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 22px;
        padding: 20px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 35px rgba(34, 211, 238, 0.08);
    }

    .fit-btn {
        background: rgba(16, 185, 129, 0.12);
        border: 1px solid rgba(16, 185, 129, 0.35);
        color: rgba(16, 185, 129, 0.95);
        font-weight: 800;
        letter-spacing: 0.6px;
        border-radius: 14px;
        padding: 10px 16px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(16, 185, 129, 0.15);
            color: rgba(16,185,129,1);
        }

    .fit-table {
        width: 100%;
        margin-top: 12px;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .fit-table th {
            color: rgba(255,255,255,0.75);
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.85rem;
            padding: 10px 12px;
            font-family: 'Montserrat', sans-serif;
        }

    .fit-row {
        background: rgba(0,0,0,0.35);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 16px;
        overflow: hidden;
        transition: 0.2s ease;
    }

        .fit-row:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 22px rgba(34, 211, 238, 0.10);
            border: 1px solid rgba(34, 211, 238, 0.18);
        }

        .fit-row td {
            padding: 14px 12px;
            color: rgba(255,255,255,0.85);
            vertical-align: middle;
            font-family: 'Montserrat', sans-serif;
        }

    .fit-links a {
        color: rgba(34, 211, 238, 0.95);
        font-weight: 700;
        text-decoration: none;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-links a:hover {
            text-decoration: underline;
        }

    .fit-empty {
        color: rgba(255,255,255,0.65);
        text-align: center;
        padding: 25px 0;
        font-family: 'Montserrat', sans-serif;
    }

    .fit-muted {
        color: rgba(255,255,255,0.65);
        font-family: 'Montserrat', sans-serif;
    }

    .fit-exercise-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .fit-exercise-img {
        width: 52px;
        height: 52px;
        object-fit: cover;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.40);
        box-shadow: 0 0 18px rgba(0,0,0,0.45);
        flex-shrink: 0;
    }

    .fit-exercise-placeholder {
        width: 52px;
        height: 52px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(34, 211, 238, 0.10);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        font-size: 22px;
        color: rgba(34, 211, 238, 0.95);
        flex-shrink: 0;
        box-shadow: 0 0 18px rgba(34, 211, 238, 0.08);
    }
</style>

<div class="fit-box">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <div class="fit-page-title">Cviky</div>
            <div class="fit-muted">Databáze cviků a přiřazených strojů</div>
        </div>

        <a class="fit-btn" asp-action="Create">+ Přidat cvik</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="fit-empty">
            Zatím nejsou žádné cviky.
        </div>
    }
    else
    {
        <table class="fit-table">
            <thead>
                <tr>
                    <th>Název</th>
                    <th>Partie</th>
                    <th>Stroj</th>
                    <th style="text-align:right;">Akce</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="fit-row">
                        <td style="font-weight:900;">
                            <div class="fit-exercise-cell">
                                @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="fit-exercise-img" alt="obrázek cviku" />
                                }
                                else
                                {
                                    <div class="fit-exercise-placeholder">🏋️</div>
                                }

                                <div>@item.Name</div>
                            </div>
                        </td>

                        <td>@(item.MuscleGroup ?? "-")</td>
                        <td>@(item.Machine?.Name ?? "Bez stroje")</td>

                        <td class="fit-links" style="text-align:right;">
                            <a asp-action="Details" asp-route-id="@item.Id">Detail</a>
                            <span style="color: rgba(255,255,255,0.35);"> | </span>
                            <a asp-action="Edit" asp-route-id="@item.Id">Upravit</a>
                            <span style="color: rgba(255,255,255,0.35);"> | </span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
