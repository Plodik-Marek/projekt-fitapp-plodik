@model List<fitapp_plodik_MVC.Entities.Exercise>
@{
    ViewData["Title"] = "Cviky";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue',sans-serif;
        letter-spacing: 2px;
        font-size: 2.4rem;
    }

    .fit-subtitle {
        color: rgba(255,255,255,.65);
        font-family: 'Montserrat';
        margin-bottom: 18px;
    }

    .fit-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(260px,1fr));
        gap: 22px;
    }

    .fit-card {
        background: rgba(18,18,18,.92);
        border: 1px solid rgba(255,255,255,.1);
        border-radius: 22px;
        overflow: hidden;
        transition: .2s;
        box-shadow: 0 0 30px rgba(34,211,238,.06);
    }

        .fit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 35px rgba(34,211,238,.15);
        }

    .fit-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .fit-body {
        padding: 16px;
    }

    .fit-name {
        font-weight: 900;
        font-size: 1.2rem;
        letter-spacing: .5px;
    }

    .fit-muscle {
        font-size: .85rem;
        color: rgba(34,211,238,.95);
        font-weight: 700;
    }

    .fit-machine {
        font-size: .85rem;
        color: rgba(255,255,255,.65);
        margin-bottom: 10px;
    }

    .fit-links a {
        font-size: .85rem;
        text-decoration: none;
        font-weight: 700;
        color: rgba(34,211,238,.95);
    }

    .fit-btn-add {
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.35);
        color: rgba(16,185,129,.95);
        font-weight: 800;
        border-radius: 14px;
        padding: 10px 18px;
        text-decoration: none;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <div class="fit-page-title">Cviky</div>
        <div class="fit-subtitle">Databáze cviků</div>
    </div>
    <a asp-action="Create" class="fit-btn-add">+ Přidat cvik</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="fit-subtitle">Zatím nejsou žádné cviky.</div>
}
else
{
    <div class="fit-grid">
        @foreach (var e in Model)
        {
            <div class="fit-card">

                @if (!string.IsNullOrEmpty(e.ImageUrl))
                {
                    <img src="@e.ImageUrl" class="fit-img" />
                }
                else
                {
                    <div class="fit-img d-flex align-items-center justify-content-center" style="background:rgba(34,211,238,.12);font-size:2.2rem;">🏋️</div>
                }

                <div class="fit-body">
                    <div class="fit-name">@e.Name</div>
                    <div class="fit-muscle">@e.MuscleGroup</div>
                    <div class="fit-machine">
                        @(e.Machine?.Name ?? "Bez stroje")
                    </div>

                    <div class="fit-links mt-2">
                        <a asp-action="Details" asp-route-id="@e.Id">Detail</a> |
                        <a asp-action="Edit" asp-route-id="@e.Id">Upravit</a> |
                        <a asp-action="Delete" asp-route-id="@e.Id">Smazat</a>
                    </div>
                </div>

            </div>
        }
    </div>
}
