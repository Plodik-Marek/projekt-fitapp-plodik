@model fitapp_plodik_MVC.Entities.Trainer

<h2>Detail trenéra</h2>

<p><b>Jméno:</b> @Model.FullName</p>
<p><b>Email:</b> @(Model.Email ?? "-")</p>
<p><b>Telefon:</b> @(Model.Phone ?? "-")</p>
<p><b>Bio:</b> @(Model.Bio ?? "-")</p>

@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" style="max-width:250px;" class="rounded mb-3" />
}

<hr />

<div class="d-flex justify-content-between align-items-center mb-2">
    <h4>Specializace (cviky)</h4>

    <a class="btn btn-success"
       asp-controller="TrainerSpecializations"
       asp-action="Create"
       asp-route-trainerId="@Model.Id">
        + Přidat specializaci
    </a>
</div>

@if (Model.TrainerSpecializations == null || Model.TrainerSpecializations.Count == 0)
{
    <p class="text-muted">Zatím bez specializací.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Cvik</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TrainerSpecializations)
            {
                <tr>
                    <td>@item.Exercise?.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-danger"
                           asp-controller="TrainerSpecializations"
                           asp-action="Delete"
                           asp-route-id="@item.Id">
                            Smazat
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Zpět</a>
</p>
