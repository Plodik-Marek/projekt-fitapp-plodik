@model fitapp_plodik_MVC.Entities.Trainer
@{
    ViewData["Title"] = "Upravit trenéra";
}

<style>
    .fit-box {
        background: rgba(18,18,18,.92);
        border: 1px solid rgba(255,255,255,.1);
        border-radius: 22px;
        padding: 24px;
        box-shadow: 0 0 35px rgba(34,211,238,.08)
    }

    .fit-label {
        font-weight: 700;
        color: rgba(255,255,255,.85);
        margin-bottom: 6px;
        font-family: 'Montserrat'
    }

    .fit-input {
        background: rgba(0,0,0,.45) !important;
        border: 1px solid rgba(255,255,255,.12) !important;
        color: #fff !important;
        border-radius: 14px !important;
        padding: 10px 12px !important
    }

    .fit-btn-save {
        background: rgba(255,193,7,.14);
        border: 1px solid rgba(255,193,7,.35);
        color: rgba(255,193,7,.95);
        font-weight: 800;
        border-radius: 14px;
        padding: 10px 18px
    }

    .fit-preview {
        margin-top: 12px;
        max-width: 220px;
        border-radius: 16px
    }
</style>

<div class="fit-box">
    <h2>Upravit trenéra</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="fit-label">Jméno</label>
            <input asp-for="FullName" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Bio</label>
            <textarea asp-for="Bio" class="form-control fit-input"></textarea>
        </div>

        <div class="mb-3">
            <label class="fit-label">Telefon</label>
            <input asp-for="Phone" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Email</label>
            <input asp-for="Email" class="form-control fit-input" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="text-center">
                <img src="@Model.ImageUrl" class="fit-preview" />
            </div>
        }

        <div class="mb-4">
            <label class="fit-label">Změnit fotku</label>
            <input type="file" name="imageFile" class="form-control fit-input" accept="image/*" />
        </div>

        <button type="submit" class="fit-btn-save">Uložit</button>
        <a asp-action="Index" class="btn btn-secondary">Zpět</a>
    </form>
</div>
