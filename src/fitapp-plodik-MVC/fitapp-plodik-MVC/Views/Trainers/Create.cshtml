@model fitapp_plodik_MVC.Entities.Trainer

@{
    ViewData["Title"] = "Přidat trenéra";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 2px;
        font-size: 2.3rem;
        margin-bottom: 0;
    }

    .fit-subtitle {
        color: rgba(255,255,255,0.65);
        font-family: 'Montserrat', sans-serif;
        margin-bottom: 18px;
    }

    .fit-box {
        background: rgba(18, 18, 18, 0.92);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: 22px;
        padding: 24px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 35px rgba(34, 211, 238, 0.08);
    }

    .fit-label {
        font-weight: 700;
        letter-spacing: 0.5px;
        color: rgba(255,255,255,0.85);
        margin-bottom: 6px;
        font-family: 'Montserrat', sans-serif;
    }

    .fit-input {
        background: rgba(0,0,0,0.45) !important;
        border: 1px solid rgba(255,255,255,0.12) !important;
        color: #fff !important;
        border-radius: 14px !important;
        padding: 10px 12px !important;
    }

        .fit-input:focus {
            border-color: rgba(34, 211, 238, 0.45) !important;
            box-shadow: 0 0 0 0.15rem rgba(34, 211, 238, 0.15) !important;
        }

    .fit-btn-save {
        background: rgba(16, 185, 129, 0.12);
        border: 1px solid rgba(16, 185, 129, 0.35);
        color: rgba(16, 185, 129, 0.95);
        font-weight: 800;
        letter-spacing: 0.6px;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(16, 185, 129, 0.15);
            color: rgba(16,185,129,1);
        }

    .fit-btn-back {
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.12);
        color: rgba(255,255,255,0.85);
        font-weight: 700;
        border-radius: 14px;
        padding: 10px 18px;
        transition: 0.2s ease;
        text-decoration: none;
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }

        .fit-btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(255,255,255,0.06);
            color: #fff;
        }
</style>

<div class="fit-box">

    <div class="mb-3">
        <div class="fit-page-title">Přidat trenéra</div>
        <div class="fit-subtitle">Vytvoř nového trenéra v aplikaci</div>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="fit-label">Jméno</label>
            <input asp-for="FullName" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Bio</label>
            <textarea asp-for="Bio" rows="4" class="form-control fit-input"></textarea>
        </div>

        <div class="mb-3">
            <label class="fit-label">Telefon</label>
            <input asp-for="Phone" class="form-control fit-input" />
        </div>

        <div class="mb-3">
            <label class="fit-label">Email</label>
            <input asp-for="Email" class="form-control fit-input" />
        </div>

        <div class="mb-4">
            <label class="fit-label">Obrázek URL</label>
            <input asp-for="ImageUrl" class="form-control fit-input" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="fit-btn-save">Uložit</button>
            <a asp-action="Index" class="fit-btn-back">Zpět</a>
        </div>
    </form>

</div>
