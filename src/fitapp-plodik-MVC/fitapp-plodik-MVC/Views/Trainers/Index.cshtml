@model List<fitapp_plodik_MVC.Entities.Trainer>
@{
    ViewData["Title"] = "Trenéři";
}

<style>
    .fit-page-title {
        font-family: 'Bebas Neue',sans-serif;
        letter-spacing: 2px;
        font-size: 2.4rem;
    }

    .fit-subtitle {
        color: rgba(255,255,255,.65);
        font-family: 'Montserrat';
        margin-bottom: 18px;
    }

    .fit-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(260px,1fr));
        gap: 22px;
    }

    .fit-card {
        background: rgba(18,18,18,.92);
        border: 1px solid rgba(255,255,255,.1);
        border-radius: 22px;
        padding: 20px;
        text-align: center;
        transition: .2s;
        box-shadow: 0 0 30px rgba(34,211,238,.06);
    }

        .fit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 35px rgba(34,211,238,.15);
        }

    .fit-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(34,211,238,.4);
        box-shadow: 0 0 25px rgba(34,211,238,.25);
        margin-bottom: 12px;
    }

    .fit-name {
        font-weight: 900;
        font-size: 1.2rem;
        letter-spacing: .5px;
    }

    .fit-contact {
        font-size: .9rem;
        color: rgba(255,255,255,.65);
        margin-bottom: 10px;
    }

    .fit-links a {
        font-size: .85rem;
        text-decoration: none;
        font-weight: 700;
        color: rgba(34,211,238,.95);
    }

    .fit-btn-add {
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.35);
        color: rgba(16,185,129,.95);
        font-weight: 800;
        border-radius: 14px;
        padding: 10px 18px;
        text-decoration: none;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <div class="fit-page-title">Trenéři</div>
        <div class="fit-subtitle">Tým profesionálů</div>
    </div>
    <a asp-action="Create" class="fit-btn-add">+ Přidat trenéra</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="fit-subtitle">Zatím žádní trenéři.</div>
}
else
{
    <div class="fit-grid">
        @foreach (var t in Model)
        {
            <div class="fit-card">
                @if (!string.IsNullOrEmpty(t.ImageUrl))
                {
                    <img src="@t.ImageUrl" class="fit-avatar" />
                }
                else
                {
                    <div class="fit-avatar d-flex align-items-center justify-content-center" style="background:rgba(34,211,238,.15);font-size:2rem;">🏋️</div>
                }

                <div class="fit-name">@t.FullName</div>
                <div class="fit-contact">@t.Email</div>
                <div class="fit-contact">@t.Phone</div>

                <div class="fit-links mt-2">
                    <a asp-action="Details" asp-route-id="@t.Id">Detail</a> |
                    <a asp-action="Edit" asp-route-id="@t.Id">Upravit</a> |
                    <a asp-action="Delete" asp-route-id="@t.Id">Smazat</a>
                </div>
            </div>
        }
    </div>
}
